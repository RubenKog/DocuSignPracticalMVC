@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Sign PDF</h3>
        </div>
        <div class="card-body">
            <form asp-controller="Home" asp-action="Sign" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="signEmail" class="control-label">Enter Email:</label>
                    <input type="email" id="signEmail" name="signEmail" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="signName" class="control-label">Signed PDF name:</label>
                    <input type="text" id="signName" name="signName" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Upload</button>
            </form>
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-info mt-3">@ViewBag.Message</div>
            }
        </div>
    </div>
</div>
